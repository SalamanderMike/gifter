<!-- IMAGES ********************************************************************************-->
<div id="titleSmall">Gifter</div>

<div class="flower-paper" ng-show="gifter.giftee">
  <!-- <div class="gifter-box"></div> -->
</div>

<div class="brown-paper" ng-show="gifter.admin"></div>

<!-- EVENT PANELS ********************************************************************************-->
<div  ng-show="gifter.home" class="visible">
<div class="eventPanelContainer">
<h3 style="font-family: 'Raleway', sans-serif;">
  Click On A Green Event To See Who Your 'giftee' is<br>
  Red Events Are Not Ready, Yet
  </h3>
  <div  class="eventPanel" ng-repeat="event in gifter.myEvents track by $index"
        style="background:{{gifter.thisEventColor(event.match)}};">
    <div class="eventTitles">{{event.eventName}}</div>
    <div class="eventViewer"  ng-click="gifter.thisMatchProfile(event.id)">
      <p class="eventName"></p>
      <div class="eventBox"></div>
    </div>
  </div>
</div>

<div class="spacer"></div>

<!-- INTERESTS PANELS ****************************************************************************-->
<div class="interestPanelContainer">
  <h3 style="font-family: 'Raleway', sans-serif;">Add new favorite things for your gifter to see...</h3>
  <h3 style="font-family: 'Raleway', sans-serif;">or delete them using the red buttons</h3>
  <div class="interestPanel" ng-repeat="catagory in gifter.interests">
    <div class="interestTitles">{{catagory[0]}}</div>
    <div class="interestViewer">

      <div class="tags" ng-repeat="tag in catagory[1] track by $index">{{tag}}
        <button class="deleteButton"  ng-click="gifter.removeTag($index, catagory[2])">
          <span class="remove">x</span>
        </button>
      </div>

    </div>
    <form ng-submit="gifter.addTag(newTag, catagory[2])">
      <span>
        <input class="inputChoices" type="text" ng-model="newTag" placeholder="{{catagory[3]}}">
        <!-- <div ng-repeat="word in gifter.suggestions">{{word}}</div> -->
        <button type="submit" id="interestSubmit">Add Interest!</button>
      </span>
    </form>
  </div>
</div>

</div>
<!-- Giftee's Profile ****************************************************************************-->
<div  ng-show="gifter.giftee" class="visible">

  <div id="gifteeName" class="headding">Your Giftee is:  <span style="font-family: 'Spirax', cursive;font-size:1.5em;">{{gifter.matchName}}!</span></div>

  <div id="displayPanel">
    <div style="color:grey;text-align:center;">
    <!-- click on an item to see where you can buy it -->
    These are {{gifter.matchName}}'s favorite things!<br>
    Your spending limit is ${{gifter.eventLimit}}
    </div>
    <div id="displayPanelInlay">
      <ul style="list-style-type: none;padding-left:10px;">
        <li class="headding" ng-repeat="catagories in gifter.matchInterests">{{catagories[0]}}
          <ul>
            <li class="body" ng-repeat="interests in catagories[1] track by $index">{{interests}}</li>
          </ul>
        </li>
      </ul>
    </div>

  </div>
</div>
<!-- CHOOSE EVENT TO EDIT ************************************************************************-->
<div ng-show="gifter.chooseEvent" class="visible">
  <div class="eventPanelContainer">
  <h3 style="font-family: 'Raleway', sans-serif;">
  Choose which of your Events you'd like to see more details about
  </h3>
    <div  class="eventPanel" ng-repeat="event in gifter.adminsEvents track by $index"
          style="background:{{gifter.thisEventColor(event.match)}};">
      <div class="eventTitles">{{event.eventName}}</div>
      <div class="eventViewer" ng-click="gifter.adminPage(event)">
        <p class="eventName"></p>
        <div class="eventBox"></div>
      </div>
        <!-- <span>click me!</span> -->
    </div>
  </div>
</div>
<!-- EVENT DETAILS ******************************************************************************-->
<div ng-show="gifter.admin" class="visible">
  <div id="gifteeName" class="headding">Event Settings</div>

  <div id="displayPanel">
    <div style="color:grey;text-align:center;">
    {{gifter.participantNum}} participants have saved a profile!<br>
    When all members have filled out their profile<br>
    Gifter will randomly match everyone
    </div>
    <div id="displayPanelInlay">
      <ul style="list-style-type: none;padding-left:10px;">
        <li class="headding" ng-repeat="participant in gifter.participants track by $index">
        {{participant}}
          <!-- <button class="btn btn-danger" ng-click="gifter.removeParticipant($index)">X</button> -->
        </li>
      </ul>
    </div>
  </div>

<!-- <div>progress bar of participants</div>
<div>list of participants with add/delete option</div>
<div>Match Button</div>
<div>number of participants</div>
<div>spending limit</div> -->


</div>
<!-- JOIN EXISTING EVENT ******************************************************************************-->
<div ng-show="gifter.joinEventVisible" class="visible">
<div class="bow-background"></div>
  <div id="newEventContainer">
    <form class="form-horizontal" role="form" ng-submit="gifter.joinEvent()">
      <div class="form-group">
        <label for="joinEventName" class="col-sm-2 control-label">What's the name of the event you're joining?</label>
        <div class="col-sm-4">
          <input autofocus class="form-control" id="joinEventName" ng-model="join.eventName" placeholder="Big Data Holiday Bash">
        </div>
      </div>
      <div class="form-group">
        <label for="joinPassword" class="col-sm-2 control-label">What's the Group Password?</label>
        <div class="col-sm-4">
          <input class="form-control" id="joinPassword" type="password" ng-model="join.password" placeholder="password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" ng-click="joinEvent()" class="btn btn-info">Join This Event!</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- CREATE NEW EVENT ******************************************************************************-->
<div ng-show="gifter.createEvent" class="visible">
<div class="bow-background"></div>
  <div id="newEventContainer">
    <form class="form-horizontal" role="form" ng-submit="gifter.createNewEvent()">
      <div class="form-group">
        <label for="eventName" class="col-sm-2 control-label">Event Name</label>
        <div class="col-sm-4">
          <input autofocus class="form-control" id="eventName" ng-model="newEvent.eventName" placeholder="Big Data Holiday Bash">
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Group Password</label>
        <div class="col-sm-4">
          <input class="form-control" id="password" type="password" ng-model="newEvent.password" placeholder="password">
        </div>
      </div>
      <div class="form-group">
        <label for="spendingLimit" class="col-sm-2 control-label">Spending Limit $</label>
        <div class="col-sm-4">
          <input class="form-control" id="spendingLimit" type="number" ng-model="newEvent.spendingLimit" placeholder="5 or 50 dollars?">
        </div>
      </div>
      <div class="form-group">
        <label for="participantNum" class="col-sm-2 control-label">Number of Partcipants</label>
        <div class="col-sm-4">
          <input class="form-control" id="participantNum" type="number" ng-model="newEvent.participants" placeholder="3 or 30 people?">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" ng-click="createNewEvent()" class="btn btn-info">Lead This Event!</button>
        </div>
      </div>
    </form>
  </div>
</div>


