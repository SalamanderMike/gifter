<!-- EVENT PANELS ********************************************************************************-->
<div class="container" ng-show="gifter.home">
  <div class="eventPanel" ng-repeat="event in gifter.myEvents track by $index">
    <div class="eventTitles">{{event.eventName}}</div>
    <div class="eventViewer" ng-click="gifter.thisMatchProfile(event.id)">
      <p class="eventName"></p>
      <div class="eventBox">
      </div>
    </div>
      <span>click me!</span>
  </div>
</div>
<br/><br/><br/><br/><br/>
<div class="spacer"></div>

<!-- INTERESTS PANELS ****************************************************************************-->
<div class="container">
    <div class="interestPanel" ng-show="gifter.home" ng-repeat="catagory in gifter.interests">
      <div class="interestTitles">{{catagory[0]}}</div>
      <div class="interestViewer">
          <div class="tags" ng-repeat="tag in catagory[1] track by $index">{{tag}}
            <button class="remove"  ng-click="gifter.removeTag($index, catagory[2])"></button>
          </div>
      </div>
      <form ng-submit="gifter.addTag(newTag, catagory[2])">
        <span>
          <input class="inputChoices" type="text" ng-model="newTag" placeholder="{{catagory[3]}}">
          <!-- <div ng-repeat="word in gifter.suggestions">{{word}}</div> -->
          <button type="submit" id="interestSubmit">Add Interest!</button>
        </span>
      </form>
    </div>
</div>

<!-- Giftee's Profile ****************************************************************************-->

<div id="gifteeEventTitle" ng-show="gifter.giftee">{{gifter.eventTitle}}</div>
<div id="gifteeName" ng-show="gifter.giftee">Your Giftee is {{gifter.matchName}}!</div>
<div id="gifteeInterests" ng-show="gifter.giftee">{{gifter.matchInterests}}</div>















