<!-- INTERESTS PANELS ****************************************************************************-->

<div class="interestPanel" ng-show="gifter.home">
  <div class="interestTitles">Services</div>
  <div class="interestViewer">
      <div class="tags" ng-repeat="tag in gifter.myProfile.services track by $index">{{tag}}
        <button class="remove"  ng-click="gifter.removeTag($index, 'services')"></button>
      </div>
  </div>
  <form ng-submit="gifter.addTag('services')">
    <span>
      <input class="inputChoices" type="text" ng-model="newTag" placeholder="Dropbox...">
      <!-- <div ng-repeat="word in gifter.suggestions">{{word}}</div> -->
      <button id="interestSubmit">Add Interest!</button>
    </span>
  </form>
</div>
