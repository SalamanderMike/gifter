<h1>LOGIN PAGE</h1>

<div class="container">
  <div class="col-md-2">

    <%= form_for :user do |f| %>
      <p>Login <%= f.text_field :username, placeholder: "Enter your email" %> </p>
      <p>Password <%= f.password_field :password, placeholder: "Enter your password" %> </p>
      <%= f.submit "Login!", :class => "btn btn-sunny text-uppercase" %><br/>
      <%= link_to "Sign Up!", new_user_path %>
    <% end %>

  </div>
</div>

